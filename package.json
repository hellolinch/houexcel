{
  "name": "houexcel",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder",
    "build-portable": "electron-builder --portable",
    "build-dir": "electron-builder --dir"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Excel界址点成果表批量处理工具",
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "exceljs": "^4.4.0"
  },
  "build": {
    "appId": "com.houexcel.app",
    "productName": "界址点成果表处理工具",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "renderer/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": null
    },
    "portable": {
      "artifactName": "${productName}-${version}-便携版.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
